<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS Sistema de Ventas (Firestore)</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Iconos Lucide -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');
        body { font-family: 'Inter', sans-serif; }
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f1f1f1; }
        ::-webkit-scrollbar-thumb { background: #c7c7c7; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #a0a0a0; }

        @media print {
            body > *:not(#invoice-view) { display: none !important; }
            #invoice-view {
                position: absolute; top: 0; left: 0; width: 100%; height: 100%;
                background: white; display: block !important; overflow: visible;
                padding: 0; margin: 0; z-index: 9999;
            }
            #printable-area { box-shadow: none; max-width: 100%; width: 100%; margin: 0; padding: 20px; }
            .print\:hidden { display: none !important; }
        }

        /* Animación de carga */
        .loader {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #4f46e5;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
        }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
        
        .switch {
          position: relative;
          display: inline-block;
          width: 40px;
          height: 24px;
        }
        .switch input { opacity: 0; width: 0; height: 0; }
        .slider {
          position: absolute;
          cursor: pointer;
          top: 0; left: 0; right: 0; bottom: 0;
          background-color: #ccc;
          transition: .4s;
          border-radius: 34px;
        }
        .slider:before {
          position: absolute; content: "";
          height: 16px; width: 16px;
          left: 4px; bottom: 4px;
          background-color: white;
          transition: .4s;
          border-radius: 50%;
        }
        input:checked + .slider { background-color: #4f46e5; }
        input:checked + .slider:before { transform: translateX(16px); }
    </style>
</head>
<body class="bg-gray-100 text-gray-900 font-sans overflow-hidden">

    <!-- Toast Container -->
    <div id="toast-container" class="fixed top-4 right-4 z-[100] space-y-2"></div>

    <!-- 0. PANTALLA DE CARGA -->
    <div id="loading-screen" class="fixed inset-0 z-[60] bg-gray-100 flex flex-col items-center justify-center p-4 text-center">
        <div id="loader-spinner" class="loader mb-4"></div>
        <h2 id="loading-title" class="text-xl font-semibold text-gray-700">Iniciando Sistema...</h2>
    </div>

    <!-- 1. PANTALLA DE LOGIN -->
    <div id="auth-screen" class="fixed inset-0 z-50 bg-gray-900 flex items-center justify-center hidden">
        <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-md relative overflow-hidden">
             <!-- Decoración de fondo -->
            <div class="absolute top-0 left-0 w-full h-2 bg-indigo-600"></div>
            
            <h2 class="text-3xl font-bold text-center mb-2 text-indigo-700">POS Login</h2>
            <p class="text-center text-gray-500 mb-6 text-sm">Sistema de Ventas & Delivery</p>
            
            <form id="login-form" class="space-y-5">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <div class="relative">
                        <i data-lucide="mail" class="absolute left-3 top-2.5 w-5 h-5 text-gray-400"></i>
                        <input type="email" id="login-email" class="w-full border pl-10 p-2 rounded focus:ring-2 focus:ring-indigo-500 transition" placeholder="admin@tienda.com" required>
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Contraseña</label>
                    <div class="relative">
                        <i data-lucide="lock" class="absolute left-3 top-2.5 w-5 h-5 text-gray-400"></i>
                        <input type="password" id="login-pass" class="w-full border pl-10 p-2 rounded focus:ring-2 focus:ring-indigo-500 transition" placeholder="******" required>
                    </div>
                </div>

                <!-- Configuración de Impuesto al Login -->
                <div class="flex items-center justify-between bg-gray-50 p-3 rounded border border-gray-100">
                    <span class="text-sm font-medium text-gray-700">Cobrar IVA (15%)</span>
                    <label class="switch">
                      <input type="checkbox" id="login-tax-toggle" checked>
                      <span class="slider"></span>
                    </label>
                </div>

                <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-bold hover:bg-indigo-700 transition duration-150 shadow-lg transform hover:-translate-y-0.5">Ingresar al Sistema</button>
            </form>

            <form id="register-form" class="space-y-4 hidden">
                <div class="bg-yellow-50 p-3 rounded border border-yellow-200 text-xs text-yellow-800 mb-2">
                    Crea una cuenta para administrar el negocio.
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" id="reg-email" class="w-full border p-2 rounded focus:ring-2 focus:ring-indigo-500" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Contraseña (Mín. 6)</label>
                    <input type="password" id="reg-pass" class="w-full border p-2 rounded focus:ring-2 focus:ring-indigo-500" required>
                </div>
                <button type="submit" class="w-full bg-green-600 text-white py-2 rounded-lg font-semibold hover:bg-green-700 transition duration-150">Registrar Usuario</button>
                <button type="button" id="cancel-reg-btn" class="w-full mt-2 text-sm text-gray-500 hover:text-gray-700">Cancelar</button>
            </form>

            <div class="mt-6 flex flex-col items-center space-y-3">
                <button id="show-register-btn" class="text-sm text-indigo-600 hover:text-indigo-800 transition duration-150 font-medium">¿Nuevo administrador? Regístrate aquí</button>
            </div>
            
            <div id="auth-error-msg" class="mt-4 text-center bg-red-100 text-red-600 p-2 rounded text-sm hidden"></div>
        </div>
    </div>

    <!-- 2. APLICACIÓN PRINCIPAL -->
    <div id="app-screen" class="h-screen flex flex-col hidden">
        <!-- Header -->
        <header class="bg-white shadow-md p-3 md:p-4 flex justify-between items-center z-10">
            <h1 class="text-xl md:text-2xl font-bold text-indigo-700 flex items-center gap-2">
                <i data-lucide="store" class="w-6 h-6"></i> <span class="hidden md:inline">POS General</span>
            </h1>
            
            <div class="flex items-center space-x-2 md:space-x-4">
                 <!-- Toggle Impuestos Global (Visible en sesión) -->
                <div class="flex items-center space-x-2 bg-gray-100 px-3 py-1 rounded-full border border-gray-200" title="Activar/Desactivar IVA">
                    <span class="text-xs font-bold text-gray-600">IVA</span>
                    <label class="switch scale-75">
                        <input type="checkbox" id="global-tax-toggle" onchange="window.updateTaxSetting(this.checked)">
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="h-6 w-px bg-gray-300 mx-1"></div>

                <button onclick="toggleTab('products-view')" class="p-2 rounded-full text-gray-600 hover:bg-gray-100 transition" title="Ventas">
                    <i data-lucide="layout-grid" class="w-5 h-5 md:w-6 md:h-6"></i>
                </button>
                <button onclick="toggleTab('inventory-view')" class="p-2 rounded-full text-gray-600 hover:bg-gray-100 transition" title="Inventario">
                    <i data-lucide="clipboard-list" class="w-5 h-5 md:w-6 md:h-6"></i>
                </button>
                <button onclick="toggleTab('orders-view')" class="p-2 rounded-full text-gray-600 hover:bg-gray-100 transition" title="Historial">
                    <i data-lucide="history" class="w-5 h-5 md:w-6 md:h-6"></i>
                </button>
                
                <div class="h-6 w-px bg-gray-300 mx-1"></div>
                
                <span id="user-info" class="text-xs md:text-sm text-gray-600 hidden lg:inline-block font-medium"></span>
                <button id="logout-btn" class="flex items-center space-x-1 bg-red-50 text-red-600 px-3 py-1 rounded-lg hover:bg-red-100 transition">
                    <i data-lucide="log-out" class="w-4 h-4"></i>
                </button>
            </div>
        </header>

        <!-- Contenido principal -->
        <main class="flex-1 flex overflow-hidden relative">
            
            <!-- Columna 1: Productos (Venta) -->
            <div id="products-view" class="flex-1 flex flex-col p-4 overflow-y-auto bg-gray-50/50">
                <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2 mb-4">
                    <div class="relative flex-1">
                        <i data-lucide="search" class="absolute left-3 top-3 w-4 h-4 text-gray-400"></i>
                        <input id="search-input" type="text" placeholder="Buscar productos..." class="w-full border pl-9 p-2 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 bg-white shadow-sm">
                    </div>
                    <select id="category-filter" class="border p-2 rounded-lg bg-white shadow-sm cursor-pointer">
                        <option value="">Todas las categorías</option>
                    </select>
                </div>
                
                <div id="product-grid" class="flex-1 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 overflow-y-auto pb-20 md:pb-4 content-start">
                    <p class="text-center text-gray-500 col-span-full mt-10">Cargando productos...</p>
                </div>
            </div>

            <!-- Columna 2: Inventario (Gestión) -->
            <div id="inventory-view" class="flex-1 p-4 overflow-y-auto hidden bg-white">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">Inventario Global</h2>
                    <button onclick="openProductModal()" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition shadow flex items-center gap-2">
                        <i data-lucide="plus-circle" class="w-5 h-5"></i> Agregar Producto
                    </button>
                </div>
                <div class="bg-white shadow border rounded-xl overflow-hidden">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Producto</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Precio</th>
                                <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Stock</th>
                                <th class="px-6 py-3 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="inventory-table-body" class="bg-white divide-y divide-gray-200"></tbody>
                    </table>
                </div>
            </div>

            <!-- Columna 3: Historial -->
            <div id="orders-view" class="flex-1 p-4 overflow-y-auto hidden bg-white">
                <h2 class="text-2xl font-bold mb-4 text-gray-800">Historial de Órdenes (Público)</h2>
                <div class="bg-white shadow border rounded-xl overflow-hidden">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-bold text-gray-500 uppercase">ID</th>
                                <th class="px-4 py-3 text-left text-xs font-bold text-gray-500 uppercase">Fecha</th>
                                <th class="px-4 py-3 text-left text-xs font-bold text-gray-500 uppercase">Cliente</th>
                                <th class="px-4 py-3 text-left text-xs font-bold text-gray-500 uppercase">Total</th>
                                <th class="px-4 py-3 text-center text-xs font-bold text-gray-500 uppercase">Acción</th>
                            </tr>
                        </thead>
                        <tbody id="orders-table-body" class="bg-white divide-y divide-gray-200"></tbody>
                    </table>
                </div>
            </div>

            <!-- Columna Lateral: Carrito -->
            <div class="w-full md:w-80 lg:w-96 bg-white border-l flex flex-col absolute md:relative z-20 h-full transform transition-transform duration-300 translate-x-full md:translate-x-0 shadow-xl md:shadow-none" id="cart-sidebar">
                <div class="p-4 border-b bg-indigo-50/50 flex justify-between items-center">
                    <h2 class="text-lg font-bold text-indigo-900 flex items-center gap-2">
                        <i data-lucide="shopping-cart" class="w-5 h-5 text-indigo-600"></i> Orden Actual
                    </h2>
                    <span id="cart-count" class="bg-indigo-600 text-white text-xs font-bold px-2 py-1 rounded-full">0</span>
                    <button class="md:hidden p-1 hover:bg-indigo-100 rounded" onclick="toggleCartMobile()">
                        <i data-lucide="x" class="w-6 h-6 text-indigo-600"></i>
                    </button>
                </div>
                
                <div id="cart-items" class="flex-1 overflow-y-auto p-3 space-y-3 bg-white">
                    <div class="flex flex-col items-center justify-center h-full text-gray-400 space-y-2">
                        <i data-lucide="shopping-basket" class="w-12 h-12 opacity-30"></i>
                        <p class="text-sm">Agrega productos para comenzar</p>
                    </div>
                </div>

                <div class="p-4 bg-gray-50 border-t space-y-3">
                    <div class="space-y-1 text-sm">
                        <div class="flex justify-between text-gray-600">
                            <span>Subtotal:</span>
                            <span id="cart-subtotal" class="font-medium">C$0.00</span>
                        </div>
                        <div class="flex justify-between text-gray-600">
                            <span class="flex items-center gap-1">Impuestos <small id="tax-label" class="text-xs text-indigo-500 font-bold">(15%)</small>:</span>
                            <span id="cart-tax" class="font-medium">C$0.00</span>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-end border-t border-gray-200 pt-2">
                        <span class="text-gray-800 font-bold">Total:</span>
                        <span id="cart-total" class="text-2xl font-black text-indigo-700">C$0.00</span>
                    </div>

                    <div class="flex gap-2 pt-1">
                        <button onclick="clearCart()" class="p-3 rounded-lg border border-red-200 text-red-600 hover:bg-red-50 transition" title="Limpiar">
                            <i data-lucide="trash-2" class="w-5 h-5"></i>
                        </button>
                        <button id="checkout-btn" onclick="toggleModal('modal-checkout')" disabled class="flex-1 bg-indigo-600 text-white py-3 px-4 rounded-lg font-bold hover:bg-indigo-700 transition disabled:bg-indigo-300 disabled:cursor-not-allowed shadow-lg shadow-indigo-200 flex items-center justify-center gap-2">
                            <span>Cobrar</span>
                            <i data-lucide="arrow-right" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>
            </div>
            
            <button onclick="toggleCartMobile()" class="md:hidden fixed bottom-6 right-6 bg-indigo-600 text-white p-4 rounded-full shadow-2xl z-30 hover:bg-indigo-700 animate-bounce">
                <i data-lucide="shopping-cart" class="w-6 h-6"></i>
                <span id="mobile-cart-badge" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 flex items-center justify-center rounded-full hidden border-2 border-white">0</span>
            </button>
        </main>
    </div>

    <!-- 3. MODAL: Agregar/Editar Producto -->
    <div id="modal-product" class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm flex items-center justify-center z-50 hidden transition-opacity p-4">
        <div class="bg-white p-6 rounded-xl shadow-2xl w-full max-w-md transform transition-all">
            <div class="flex justify-between items-center mb-5 border-b pb-3">
                <h2 id="product-modal-title" class="text-xl font-bold text-gray-800">Producto</h2>
                <button onclick="toggleModal('modal-product')" class="text-gray-400 hover:text-gray-600"><i data-lucide="x" class="w-5 h-5"></i></button>
            </div>
            
            <form id="product-form" class="space-y-4">
                <input type="hidden" id="product-id">
                
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Nombre del Producto</label>
                    <input required name="name" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none bg-gray-50 focus:bg-white transition" placeholder="Ej. Coca Cola 3L">
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Precio Venta</label>
                        <div class="relative">
                            <span class="absolute left-3 top-2.5 text-gray-400">C$</span>
                            <input required type="number" step="0.01" name="price" class="w-full border border-gray-300 pl-8 p-2.5 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Stock Actual</label>
                        <input required type="number" name="stock" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                     <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Costo (Opcional)</label>
                        <input type="number" step="0.01" name="cost" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="0.00">
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Categoría</label>
                        <input required name="category" list="category-list" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="Ej. Bebidas">
                        <datalist id="category-list"></datalist>
                    </div>
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">URL Imagen (Opcional)</label>
                    <input name="imageUrl" class="w-full border border-gray-300 p-2.5 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none placeholder-gray-300" placeholder="https://...">
                </div>
                
                <div class="flex gap-3 mt-6 pt-2">
                    <button type="button" id="delete-product-btn" onclick="deleteProduct()" class="bg-red-50 text-red-600 px-4 py-2.5 rounded-lg font-bold hover:bg-red-100 hidden border border-red-100 transition">
                        <i data-lucide="trash" class="w-5 h-5"></i>
                    </button>
                    <button type="submit" id="submit-product-btn" class="flex-1 bg-indigo-600 text-white py-2.5 rounded-lg font-bold hover:bg-indigo-700 shadow-lg shadow-indigo-100 transition">Guardar Producto</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- 4. MODAL: Checkout (Mejorado) -->
    <div id="modal-checkout" class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm flex items-center justify-center z-50 hidden p-4 overflow-y-auto">
        <div class="bg-white p-6 rounded-xl shadow-2xl w-full max-w-lg m-auto relative">
            <button onclick="toggleModal('modal-checkout')" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"><i data-lucide="x" class="w-6 h-6"></i></button>
            <h2 class="text-2xl font-black mb-6 text-indigo-800 flex items-center gap-2">
                <i data-lucide="credit-card" class="w-6 h-6"></i> Finalizar Venta
            </h2>
            
            <form id="checkout-form" class="space-y-5">
                <!-- Info Cliente -->
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Nombre del Cliente <span class="text-red-500">*</span></label>
                    <input type="text" id="checkout-client-name" required class="w-full border-2 border-indigo-50 p-3 rounded-lg focus:border-indigo-500 focus:outline-none bg-indigo-50/30" placeholder="Ej. Juan Pérez">
                </div>

                <!-- Toggle Delivery -->
                <div class="bg-indigo-50 rounded-lg p-4 border border-indigo-100">
                    <div class="flex items-center justify-between mb-2">
                        <label class="flex items-center space-x-2 cursor-pointer">
                            <input type="checkbox" id="checkout-is-delivery" class="form-checkbox h-5 w-5 text-indigo-600 rounded" onchange="toggleDeliveryFields()">
                            <span class="text-sm font-bold text-indigo-800">¿Es para Delivery?</span>
                        </label>
                        <i data-lucide="bike" class="w-5 h-5 text-indigo-500"></i>
                    </div>
                    
                    <div id="delivery-fields" class="hidden space-y-3 mt-3 border-t border-indigo-200 pt-3">
                         <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Dirección de Entrega</label>
                            <textarea id="checkout-address" class="w-full border p-2 rounded text-sm focus:ring-1 focus:ring-indigo-500 outline-none" rows="2" placeholder="Barrio, Casa #, Puntos de referencia..."></textarea>
                        </div>
                        <div class="grid grid-cols-2 gap-3">
                            <div>
                                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Teléfono</label>
                                <input type="tel" id="checkout-phone" class="w-full border p-2 rounded text-sm focus:ring-1 focus:ring-indigo-500 outline-none" placeholder="8888-8888">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Costo Envío (C$)</label>
                                <input type="number" step="0.01" id="checkout-delivery-cost" value="0" class="w-full border p-2 rounded text-sm focus:ring-1 focus:ring-indigo-500 outline-none font-bold text-indigo-600">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Totales y Pagos -->
                <div class="bg-gray-50 p-4 rounded-lg space-y-2">
                    <div class="flex justify-between text-sm text-gray-600">
                         <span>Subtotal:</span>
                         <span id="co-subtotal">C$0.00</span>
                    </div>
                    <div class="flex justify-between text-sm text-gray-600">
                         <span>Impuesto:</span>
                         <span id="co-tax">C$0.00</span>
                    </div>
                    <div id="co-delivery-row" class="flex justify-between text-sm text-indigo-600 font-medium hidden">
                         <span>Envío:</span>
                         <span id="co-delivery-val">+C$0.00</span>
                    </div>
                    <div class="flex justify-between items-center border-t border-gray-300 pt-2 mt-2">
                        <span class="font-bold text-gray-800">TOTAL A PAGAR:</span>
                        <span id="checkout-total-display" class="text-2xl font-black text-gray-900">C$0.00</span>
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-bold text-indigo-700 mb-1">Efectivo Recibido (C$)</label>
                    <div class="relative">
                        <span class="absolute left-3 top-3.5 text-indigo-300 font-bold">C$</span>
                        <input type="number" step="0.01" id="checkout-paid" required class="w-full border-2 border-indigo-200 pl-10 p-3 text-2xl font-bold rounded-lg text-indigo-700 focus:border-indigo-500 focus:outline-none">
                    </div>
                </div>

                <div class="flex justify-between items-center bg-gray-100 p-3 rounded-lg border border-gray-200">
                    <span class="font-bold text-gray-600">Cambio / Vuelto:</span>
                    <span id="checkout-change-display" class="text-xl font-bold text-gray-400">C$0.00</span>
                </div>
                
                <div class="flex gap-3 mt-4">
                    <button type="button" onclick="toggleModal('modal-checkout')" class="flex-1 bg-white border border-gray-300 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-50 transition">Cancelar</button>
                    <button type="submit" id="confirm-checkout-btn" class="flex-1 bg-green-600 text-white py-3 rounded-lg font-bold hover:bg-green-700 shadow-lg shadow-green-200 flex justify-center items-center gap-2 transition transform hover:scale-[1.02]">
                        <i data-lucide="check-circle" class="w-5 h-5"></i> Confirmar Venta
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 5. VISTA DE FACTURA (PÚBLICA) -->
    <div id="invoice-view" class="fixed inset-0 bg-gray-800 flex items-center justify-center z-50 hidden overflow-y-auto p-2">
        <div id="printable-area" class="bg-white shadow-2xl w-full max-w-md mx-auto my-4 p-6 sm:p-8 relative print:shadow-none print:w-full rounded-sm min-h-[500px]">
            <!-- Encabezado Factura -->
            <div class="text-center border-b-2 border-dashed border-gray-300 pb-4 mb-4">
                <div class="flex justify-center mb-2 text-indigo-600"><i data-lucide="store" class="w-8 h-8"></i></div>
                <h3 class="text-xl font-black text-gray-900 uppercase tracking-widest">Recibo de Venta</h3>
                <p class="text-xs text-gray-500 mt-1 font-mono">ID: <span id="inv-order-id"></span></p>
                <p class="text-xs text-gray-500" id="inv-date"></p>
            </div>

            <!-- Datos Cliente -->
            <div class="mb-4 text-sm bg-gray-50 p-2 rounded border border-gray-100">
                <p class="flex justify-between"><span class="text-gray-500">Cliente:</span> <span id="inv-client-name" class="font-bold text-gray-800"></span></p>
                <div id="inv-delivery-info" class="hidden mt-1 border-t border-dashed border-gray-200 pt-1">
                    <p class="flex justify-between"><span class="text-gray-500">Teléfono:</span> <span id="inv-phone" class="font-medium"></span></p>
                    <p class="text-xs text-gray-500 mt-1">Dirección:</p>
                    <p id="inv-address" class="text-xs font-medium text-gray-700 italic"></p>
                </div>
            </div>

            <!-- Tabla Items -->
            <table class="w-full text-sm mb-4">
                <thead>
                    <tr class="text-gray-500 border-b border-gray-200">
                        <th class="py-2 text-left font-normal text-xs uppercase">Desc</th>
                        <th class="py-2 text-center font-normal text-xs uppercase">Cant</th>
                        <th class="py-2 text-right font-normal text-xs uppercase">Total</th>
                    </tr>
                </thead>
                <tbody id="inv-items-body" class="font-medium text-gray-700"></tbody>
            </table>

            <!-- Totales -->
            <div class="space-y-1 text-right text-sm border-t-2 border-dashed border-gray-300 pt-3">
                <div class="flex justify-between text-gray-500">
                    <span>Subtotal:</span>
                    <span id="inv-subtotal">C$0.00</span>
                </div>
                <div class="flex justify-between text-gray-500">
                    <span>IVA (15%):</span>
                    <span id="inv-tax">C$0.00</span>
                </div>
                 <div class="flex justify-between text-indigo-600 hidden" id="inv-row-del">
                    <span>Envío:</span>
                    <span id="inv-del">+C$0.00</span>
                </div>
                <div class="flex justify-between text-xl font-black text-gray-900 mt-2 pt-2 border-t border-gray-200">
                    <span>TOTAL:</span>
                    <span id="inv-total">C$0.00</span>
                </div>
                <div class="flex justify-between text-gray-500 text-xs mt-1">
                    <span>Pago:</span>
                    <span id="inv-paid">C$0.00</span>
                </div>
                <div class="flex justify-between text-gray-500 text-xs">
                    <span>Cambio:</span>
                    <span id="inv-change">C$0.00</span>
                </div>
            </div>
            
            <div class="mt-8 text-center print:hidden">
                 <button onclick="sendWhatsApp()" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg flex items-center justify-center gap-2 mb-2 shadow transition">
                    <i data-lucide="message-circle" class="w-5 h-5"></i> Enviar por WhatsApp
                </button>
                <p class="text-[10px] text-gray-400 mt-2">Gracias por su compra</p>
            </div>
        </div>

        <!-- Botones Flotantes -->
        <div class="fixed bottom-4 left-1/2 transform -translate-x-1/2 print:hidden flex gap-3 bg-white p-2 rounded-full shadow-2xl border border-gray-200 z-[60]">
            <button onclick="window.print()" class="p-3 bg-gray-100 rounded-full hover:bg-gray-200 text-gray-700 transition" title="Imprimir PDF">
                <i data-lucide="printer" class="w-6 h-6"></i>
            </button>
            <button onclick="copyInvoiceLink()" class="p-3 bg-indigo-100 rounded-full hover:bg-indigo-200 text-indigo-700 transition" title="Copiar Enlace Público">
                <i data-lucide="link" class="w-6 h-6"></i>
            </button>
            <button onclick="closeInvoice()" class="p-3 bg-gray-800 rounded-full hover:bg-black text-white transition" title="Cerrar">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>
    </div>

    <!-- 6. Lógica de Negocio (Firestore) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getFirestore, collection, doc, getDoc, setDoc, addDoc, updateDoc, onSnapshot, query, orderBy, deleteDoc, runTransaction, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { getAuth, signInWithEmailAndPassword, createUserWithEmailAndPassword, signOut, onAuthStateChanged, signInAnonymously, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";

        // Configuración
        let app, db, auth;
        let currentUser = null;
        let products = [];
        let cart = [];
        let orders = [];
        let currentOrder = null;
        let taxEnabled = true;
        
        const CURRENCY = "C$";
        const TAX_RATE = 0.15;
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'pos-general-prod';

        // Inicialización
        async function initApp() {
            // 1. Configurar Firebase
            const config = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
            if(!config) { console.error("No config found"); return; }
            
            app = initializeApp(config);
            db = getFirestore(app);
            auth = getAuth(app);

            // 2. Manejo de Auth
            if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                 await signInWithCustomToken(auth, __initial_auth_token);
            }

            // Detectar si venimos por un link de factura publica
            const urlParams = new URLSearchParams(window.location.search);
            const publicOrderId = urlParams.get('orderId');

            onAuthStateChanged(auth, async (user) => {
                document.getElementById('loading-screen').classList.add('hidden');
                
                if (user) {
                    // Usuario logueado (Admin o Anónimo)
                    currentUser = user;
                    
                    if (publicOrderId) {
                        // MODO VISOR: Si hay ID en URL, cargar factura y ocultar app
                        await loadPublicInvoice(publicOrderId);
                        return; 
                    }

                    if (user.isAnonymous) {
                         // Si es anónimo y NO hay orderId, mostrar login
                         showLogin();
                    } else {
                        // Usuario registrado (Admin)
                        showApp(user.email);
                    }

                } else {
                    // Si no hay user, y hay orderId, hacer login anonimo para ver la data publica
                    if (publicOrderId) {
                        await signInAnonymously(auth);
                    } else {
                        showLogin();
                    }
                }
            });
        }

        // --- NAVEGACIÓN BASICA ---
        function showLogin() {
            document.getElementById('auth-screen').classList.remove('hidden');
            document.getElementById('app-screen').classList.add('hidden');
        }

        function showApp(email) {
            document.getElementById('auth-screen').classList.add('hidden');
            document.getElementById('app-screen').classList.remove('hidden');
            document.getElementById('user-info').innerText = email;
            
            // Cargar configuración de Impuestos de la sesión de login
            const taxToggle = document.getElementById('login-tax-toggle');
            window.updateTaxSetting(taxToggle.checked);
            document.getElementById('global-tax-toggle').checked = taxToggle.checked;

            // Escuchar datos (Colección PÚBLICA para que sea global)
            listenData();
        }

        // --- FIRESTORE LISTENERS ---
        function listenData() {
            // 1. Productos Globales
            onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'products'), (snapshot) => {
                products = [];
                snapshot.forEach(doc => products.push({ id: doc.id, ...doc.data() }));
                renderProductGrid();
                renderInventoryTable();
                updateCategoryFilter();
            }, (error) => console.error("Error productos:", error));

            // 2. Ordenes (Solo lectura para historial)
            // Nota: En un sistema real grande, esto debería paginarse.
            onSnapshot(collection(db, 'artifacts', appId, 'public', 'data', 'orders'), (snapshot) => {
                orders = [];
                snapshot.forEach(doc => orders.push({ id: doc.id, ...doc.data() }));
                // Ordenar por fecha desc en cliente (limitación regla query)
                orders.sort((a, b) => new Date(b.date) - new Date(a.date));
                renderOrdersTable();
            });
        }

        // --- LÓGICA PRODUCTOS ---
        function renderProductGrid() {
            const term = document.getElementById('search-input').value.toLowerCase();
            const cat = document.getElementById('category-filter').value;
            
            let filtered = products.filter(p => {
                return p.name.toLowerCase().includes(term) && (!cat || p.category === cat);
            });

            const grid = document.getElementById('product-grid');
            if (filtered.length === 0) {
                grid.innerHTML = `<div class="col-span-full flex flex-col items-center justify-center text-gray-400 mt-10"><i data-lucide="package-open" class="w-12 h-12 mb-2"></i><p>No se encontraron productos</p></div>`;
            } else {
                grid.innerHTML = filtered.map(p => `
                    <div onclick="addToCart('${p.id}')" class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden cursor-pointer hover:shadow-md hover:border-indigo-300 transition-all group relative">
                        ${p.stock <= 5 ? `<span class="absolute top-2 left-2 bg-red-500 text-white text-[10px] font-bold px-2 py-0.5 rounded shadow-sm z-10 animate-pulse">Bajo Stock</span>` : ''}
                        <div class="h-32 bg-gray-50 flex items-center justify-center overflow-hidden relative">
                            ${p.imageUrl ? `<img src="${p.imageUrl}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" onerror="this.src='https://placehold.co/150?text=IMG'">` : `<i data-lucide="package" class="w-10 h-10 text-gray-300"></i>`}
                            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors"></div>
                        </div>
                        <div class="p-3">
                            <h3 class="font-semibold text-gray-800 text-xs md:text-sm truncate leading-tight mb-1" title="${p.name}">${p.name}</h3>
                            <div class="flex justify-between items-end">
                                <span class="text-sm md:text-lg font-black text-indigo-700">${CURRENCY}${parseFloat(p.price).toFixed(2)}</span>
                                <span class="text-[10px] text-gray-400 bg-gray-100 px-1.5 py-0.5 rounded">Stock: ${p.stock}</span>
                            </div>
                        </div>
                    </div>`).join('');
            }
            if(window.lucide) window.lucide.createIcons();
        }
        
        document.getElementById('search-input').addEventListener('input', renderProductGrid);
        document.getElementById('category-filter').addEventListener('change', renderProductGrid);

        function updateCategoryFilter() {
            const current = document.getElementById('category-filter').value;
            const categories = [...new Set(products.map(p => p.category))].sort();
            const ops = categories.map(c => `<option value="${c}">${c}</option>`).join('');
            document.getElementById('category-list').innerHTML = ops;
            document.getElementById('category-filter').innerHTML = '<option value="">Todas las categorías</option>' + ops;
            document.getElementById('category-filter').value = current;
        }

        // --- GESTIÓN INVENTARIO (CRUD) ---
        window.openProductModal = () => {
            document.getElementById('product-form').reset();
            document.getElementById('product-id').value = '';
            document.getElementById('delete-product-btn').classList.add('hidden');
            document.getElementById('product-modal-title').innerText = 'Nuevo Producto Global';
            toggleModal('modal-product');
        };

        window.editProduct = (id) => {
            const p = products.find(x => x.id === id);
            if(!p) return;
            document.getElementById('product-id').value = p.id;
            const f = document.getElementById('product-form');
            f.name.value = p.name;
            f.price.value = p.price;
            f.stock.value = p.stock;
            f.category.value = p.category;
            f.cost.value = p.cost || '';
            f.imageUrl.value = p.imageUrl || '';
            document.getElementById('delete-product-btn').classList.remove('hidden');
            document.getElementById('product-modal-title').innerText = 'Editar Producto';
            toggleModal('modal-product');
        };

        document.getElementById('product-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const f = e.target;
            const id = document.getElementById('product-id').value;
            const data = {
                name: f.name.value,
                price: parseFloat(f.price.value),
                stock: parseInt(f.stock.value),
                category: f.category.value,
                cost: parseFloat(f.cost.value) || 0,
                imageUrl: f.imageUrl.value
            };
            
            try {
                const colRef = collection(db, 'artifacts', appId, 'public', 'data', 'products');
                if (id) {
                    await updateDoc(doc(colRef, id), data);
                    window.alertMessage("Producto actualizado", 'success');
                } else {
                    await addDoc(colRef, data);
                    window.alertMessage("Producto creado globalmente", 'success');
                }
                toggleModal('modal-product');
            } catch (err) {
                console.error(err);
                window.alertMessage("Error al guardar: " + err.message, 'error');
            }
        });

        window.deleteProduct = async () => {
            const id = document.getElementById('product-id').value;
            if(!id) return;
            if(!confirm("¿Eliminar este producto permanentemente de la lista global?")) return;
            try {
                await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'products', id));
                toggleModal('modal-product');
                window.alertMessage("Producto eliminado", 'info');
            } catch(err) {
                window.alertMessage("Error al eliminar", 'error');
            }
        };

        function renderInventoryTable() {
            const tbody = document.getElementById('inventory-table-body');
            tbody.innerHTML = products.map(p => `
                <tr class="hover:bg-gray-50 border-b transition">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900">${p.name}</div>
                        <div class="text-xs text-gray-500">${p.category}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${CURRENCY}${p.price.toFixed(2)}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <span class="${p.stock < 5 ? 'px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800' : 'text-gray-900'}">
                            ${p.stock}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button onclick="editProduct('${p.id}')" class="text-indigo-600 hover:text-indigo-900 bg-indigo-50 px-3 py-1 rounded hover:bg-indigo-100 transition">Editar</button>
                    </td>
                </tr>
            `).join('');
        }

        // --- CARRITO & CHECKOUT ---
        window.updateTaxSetting = (enabled) => {
            taxEnabled = enabled;
            const taxLabel = document.getElementById('tax-label');
            if(taxEnabled) {
                taxLabel.classList.remove('line-through', 'text-gray-300');
                taxLabel.classList.add('text-indigo-500');
            } else {
                taxLabel.classList.add('line-through', 'text-gray-300');
                taxLabel.classList.remove('text-indigo-500');
            }
            renderCart();
        }

        window.addToCart = (id) => {
            const prod = products.find(p => p.id === id);
            if (!prod) return;
            if (prod.stock <= 0) { window.alertMessage("¡Sin stock!", 'error'); return; }
            
            const existing = cart.find(i => i.id === id);
            const qty = existing ? existing.quantity : 0;
            
            if (qty + 1 > prod.stock) { window.alertMessage(`Solo quedan ${prod.stock} unidades`, 'error'); return; }
            
            if (existing) existing.quantity++;
            else cart.push({ ...prod, quantity: 1 });
            
            window.alertMessage("Agregado al carrito", 'success');
            renderCart();
        };

        window.updateCartQty = (id, change) => {
             const itemIdx = cart.findIndex(i => i.id === id);
             if(itemIdx === -1) return;
             
             const item = cart[itemIdx];
             const prod = products.find(p => p.id === id);
             
             const newQty = item.quantity + change;
             
             if (newQty > prod.stock) { window.alertMessage("No hay más stock disponible", 'error'); return; }
             
             if (newQty <= 0) {
                 cart.splice(itemIdx, 1);
             } else {
                 item.quantity = newQty;
             }
             renderCart();
        };

        window.clearCart = () => { if(cart.length && confirm("¿Vaciar carrito?")) { cart = []; renderCart(); } };

        function renderCart() {
            const container = document.getElementById('cart-items');
            let subtotal = 0;
            let count = 0;

            if (cart.length === 0) {
                container.innerHTML = `<div class="flex flex-col items-center justify-center h-full text-gray-400 space-y-2"><i data-lucide="shopping-basket" class="w-12 h-12 opacity-30"></i><p class="text-sm">Agrega productos</p></div>`;
                document.getElementById('checkout-btn').disabled = true;
            } else {
                document.getElementById('checkout-btn').disabled = false;
                container.innerHTML = cart.map(item => {
                    subtotal += item.price * item.quantity;
                    count += item.quantity;
                    return `
                        <div class="flex items-center justify-between p-2 bg-white border border-gray-100 rounded-lg shadow-sm">
                            <div class="flex-1 min-w-0 pr-2">
                                <p class="font-bold text-gray-800 text-xs truncate">${item.name}</p>
                                <p class="text-[10px] text-gray-500">${CURRENCY}${item.price.toFixed(2)} unit.</p>
                            </div>
                            <div class="flex items-center bg-gray-50 rounded border border-gray-200">
                                <button onclick="updateCartQty('${item.id}', -1)" class="px-2 py-1 hover:bg-gray-200 text-gray-600 font-bold">-</button>
                                <span class="text-xs font-bold w-6 text-center">${item.quantity}</span>
                                <button onclick="updateCartQty('${item.id}', 1)" class="px-2 py-1 hover:bg-gray-200 text-indigo-600 font-bold">+</button>
                            </div>
                            <div class="text-right w-16">
                                <span class="font-bold text-sm text-indigo-700">${CURRENCY}${(item.price * item.quantity).toFixed(2)}</span>
                            </div>
                        </div>`;
                }).join('');
            }
            
            const tax = taxEnabled ? (subtotal * TAX_RATE) : 0;
            
            document.getElementById('cart-subtotal').innerText = `${CURRENCY}${subtotal.toFixed(2)}`;
            document.getElementById('cart-tax').innerText = `${CURRENCY}${tax.toFixed(2)}`;
            document.getElementById('cart-total').innerText = `${CURRENCY}${(subtotal + tax).toFixed(2)}`;
            document.getElementById('cart-count').innerText = count;
            
            const mb = document.getElementById('mobile-cart-badge');
            mb.innerText = count;
            mb.classList.toggle('hidden', count === 0);

            // Actualizar modal checkout si está abierto
            if(!document.getElementById('modal-checkout').classList.contains('hidden')) {
                updateCheckoutMath();
            }
            if(window.lucide) window.lucide.createIcons();
        }

        // --- LÓGICA CHECKOUT ---
        window.toggleDeliveryFields = () => {
            const isDel = document.getElementById('checkout-is-delivery').checked;
            const fields = document.getElementById('delivery-fields');
            const row = document.getElementById('co-delivery-row');
            
            if (isDel) {
                fields.classList.remove('hidden');
                row.classList.remove('hidden');
            } else {
                fields.classList.add('hidden');
                row.classList.add('hidden');
                document.getElementById('checkout-delivery-cost').value = 0;
            }
            updateCheckoutMath();
        }

        window.updateCheckoutMath = () => {
             const subRaw = parseFloat(document.getElementById('cart-subtotal').innerText.replace(CURRENCY, '')) || 0;
             const taxRaw = parseFloat(document.getElementById('cart-tax').innerText.replace(CURRENCY, '')) || 0;
             const delivery = parseFloat(document.getElementById('checkout-delivery-cost').value) || 0;
             const paid = parseFloat(document.getElementById('checkout-paid').value) || 0;
             
             const total = subRaw + taxRaw + delivery;
             const change = paid - total;
             
             document.getElementById('co-subtotal').innerText = `${CURRENCY}${subRaw.toFixed(2)}`;
             document.getElementById('co-tax').innerText = `${CURRENCY}${taxRaw.toFixed(2)}`;
             document.getElementById('co-delivery-val').innerText = `+${CURRENCY}${delivery.toFixed(2)}`;
             document.getElementById('checkout-total-display').innerText = `${CURRENCY}${total.toFixed(2)}`;
             
             const chDisplay = document.getElementById('checkout-change-display');
             chDisplay.innerText = `${CURRENCY}${change.toFixed(2)}`;
             chDisplay.className = `text-xl font-bold ${change < 0 ? 'text-red-500' : 'text-green-600'}`;
             
             document.getElementById('confirm-checkout-btn').disabled = change < 0;
        }

        document.getElementById('checkout-delivery-cost').addEventListener('input', updateCheckoutMath);
        document.getElementById('checkout-paid').addEventListener('input', updateCheckoutMath);

        document.getElementById('checkout-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = document.getElementById('confirm-checkout-btn');
            btn.disabled = true; btn.innerHTML = '<div class="loader w-5 h-5 border-2 border-white border-t-transparent"></div> Procesando...';
            
            const clientName = document.getElementById('checkout-client-name').value;
            const isDelivery = document.getElementById('checkout-is-delivery').checked;
            const address = document.getElementById('checkout-address').value;
            const phone = document.getElementById('checkout-phone').value;
            
            const subtotal = parseFloat(document.getElementById('co-subtotal').innerText.replace(CURRENCY, ''));
            const tax = parseFloat(document.getElementById('co-tax').innerText.replace(CURRENCY, ''));
            const deliveryCost = isDelivery ? parseFloat(document.getElementById('checkout-delivery-cost').value) : 0;
            const total = parseFloat(document.getElementById('checkout-total-display').innerText.replace(CURRENCY, ''));
            const paid = parseFloat(document.getElementById('checkout-paid').value);
            
            // 1. Validar Stock via Transacción (Evitar race conditions)
            try {
                await runTransaction(db, async (transaction) => {
                    for (const item of cart) {
                        const ref = doc(db, 'artifacts', appId, 'public', 'data', 'products', item.id);
                        const sfDoc = await transaction.get(ref);
                        if (!sfDoc.exists()) throw "Producto no existe: " + item.name;
                        
                        const newStock = sfDoc.data().stock - item.quantity;
                        if (newStock < 0) throw "Stock insuficiente para: " + item.name;
                        
                        transaction.update(ref, { stock: newStock });
                    }
                });

                // 2. Crear Orden Publica
                const orderData = {
                    date: new Date().toISOString(),
                    cart: cart,
                    clientName: clientName,
                    isDelivery: isDelivery,
                    address: isDelivery ? address : null,
                    phone: isDelivery ? phone : null,
                    deliveryCost: deliveryCost,
                    subtotal: subtotal,
                    tax: tax,
                    total: total,
                    paid: paid,
                    change: paid - total,
                    seller: currentUser.email
                };
                
                const docRef = await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'orders'), orderData);
                
                // Exito
                cart = []; renderCart();
                document.getElementById('checkout-form').reset();
                toggleModal('modal-checkout');
                showInvoice(docRef.id, orderData);
                window.alertMessage("¡Venta registrada con éxito!", 'success');

            } catch (error) {
                console.error(error);
                window.alertMessage("Error: " + error, 'error');
            }
            
            btn.disabled = false; btn.innerHTML = '<i data-lucide="check-circle" class="w-5 h-5"></i> Confirmar Venta';
            if(window.lucide) window.lucide.createIcons();
        });

        // --- FACTURA Y WHATSAPP ---
        async function loadPublicInvoice(id) {
            try {
                const docRef = doc(db, 'artifacts', appId, 'public', 'data', 'orders', id);
                const snap = await getDoc(docRef);
                if (snap.exists()) {
                    showInvoice(id, snap.data());
                } else {
                    document.getElementById('loading-screen').innerHTML = '<div class="text-center text-red-600"><h2 class="text-2xl font-bold">Error 404</h2><p>Factura no encontrada</p></div>';
                }
            } catch (e) {
                console.error(e);
            }
        }

        function showInvoice(id, data) {
            currentOrder = { id, ...data };
            
            document.getElementById('inv-order-id').innerText = id.slice(0, 8).toUpperCase();
            document.getElementById('inv-date').innerText = new Date(data.date).toLocaleString();
            document.getElementById('inv-client-name').innerText = data.clientName;
            
            // Delivery Info
            const delInfo = document.getElementById('inv-delivery-info');
            if (data.isDelivery) {
                delInfo.classList.remove('hidden');
                document.getElementById('inv-phone').innerText = data.phone || 'N/A';
                document.getElementById('inv-address').innerText = data.address || 'N/A';
                document.getElementById('inv-row-del').classList.remove('hidden');
                document.getElementById('inv-del').innerText = `+${CURRENCY}${data.deliveryCost.toFixed(2)}`;
            } else {
                delInfo.classList.add('hidden');
                document.getElementById('inv-row-del').classList.add('hidden');
            }

            document.getElementById('inv-items-body').innerHTML = data.cart.map(i => `
                <tr class="border-b border-gray-100">
                    <td class="py-2 text-left">${i.name}</td>
                    <td class="py-2 text-center text-gray-500">${i.quantity}</td>
                    <td class="py-2 text-right font-bold">${CURRENCY}${(i.price * i.quantity).toFixed(2)}</td>
                </tr>
            `).join('');

            document.getElementById('inv-subtotal').innerText = `${CURRENCY}${data.subtotal.toFixed(2)}`;
            document.getElementById('inv-tax').innerText = `${CURRENCY}${data.tax.toFixed(2)}`;
            document.getElementById('inv-total').innerText = `${CURRENCY}${data.total.toFixed(2)}`;
            document.getElementById('inv-paid').innerText = `${CURRENCY}${data.paid.toFixed(2)}`;
            document.getElementById('inv-change').innerText = `${CURRENCY}${data.change.toFixed(2)}`;

            document.getElementById('invoice-view').classList.remove('hidden');
        }

        window.sendWhatsApp = () => {
            if(!currentOrder) return;
            // Construir link publico
            const publicLink = `${window.location.origin}${window.location.pathname}?orderId=${currentOrder.id}`;
            
            let msg = `Hola *${currentOrder.clientName}*, aquí tienes tu recibo de compra. 🧾\n\n`;
            msg += `*Total: ${CURRENCY}${currentOrder.total.toFixed(2)}*\n`;
            if(currentOrder.isDelivery) {
                 msg += `🛵 Envío a: ${currentOrder.address}\n`;
            }
            msg += `\nVer factura detallada aquí: ${publicLink}`;
            
            // Si hay teléfono del cliente, usarlo, si no, abrir genérico
            let url = `https://wa.me/`;
            if (currentOrder.phone) {
                // Limpiar telefono
                const phoneClean = currentOrder.phone.replace(/\D/g,'');
                if(phoneClean.length >= 8) url += `505${phoneClean}`; // Asumiendo prefijo NI, ajustar si es necesario
            }
            url += `?text=${encodeURIComponent(msg)}`;
            
            window.open(url, '_blank');
        }

        window.closeInvoice = () => {
             document.getElementById('invoice-view').classList.add('hidden');
             const urlParams = new URLSearchParams(window.location.search);
             if (urlParams.get('orderId')) {
                 // Si venimos de un link, limpiar URL para volver al home (o recargar)
                 window.location.href = window.location.pathname;
             }
        };

        window.copyInvoiceLink = () => {
            if(!currentOrder) return;
            const url = `${window.location.origin}${window.location.pathname}?orderId=${currentOrder.id}`;
            navigator.clipboard.writeText(url).then(() => window.alertMessage("Enlace copiado al portapapeles", 'success'));
        };

        // --- HISTORIAL ---
        function renderOrdersTable() {
            const tbody = document.getElementById('orders-table-body');
            tbody.innerHTML = orders.map(o => `
                <tr class="hover:bg-gray-50 border-b transition">
                    <td class="px-4 py-3 text-xs font-mono text-gray-500">${o.id.slice(0,6)}</td>
                    <td class="px-4 py-3 text-xs text-gray-700">${new Date(o.date).toLocaleDateString()}</td>
                    <td class="px-4 py-3 text-xs font-bold text-gray-800">${o.clientName}</td>
                    <td class="px-4 py-3 text-xs font-black text-indigo-700">${CURRENCY}${o.total.toFixed(2)}</td>
                    <td class="px-4 py-3 text-center">
                        <button onclick="showPublicOrder('${o.id}')" class="text-indigo-600 hover:bg-indigo-50 p-1 rounded transition"><i data-lucide="eye" class="w-4 h-4"></i></button>
                    </td>
                </tr>
            `).join('');
            if(window.lucide) window.lucide.createIcons();
        }
        
        window.showPublicOrder = (id) => {
            const o = orders.find(x => x.id === id);
            if(o) showInvoice(o.id, o);
        }

        // --- AUTH ---
        document.getElementById('login-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('login-email').value;
            const pass = document.getElementById('login-pass').value;
            try {
                await signInWithEmailAndPassword(auth, email, pass);
                // El listener onAuthStateChanged maneja la redirección
            } catch (error) {
                const errBox = document.getElementById('auth-error-msg');
                errBox.innerText = "Error: " + error.message;
                errBox.classList.remove('hidden');
            }
        });

        document.getElementById('register-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('reg-email').value;
            const pass = document.getElementById('reg-pass').value;
            try {
                await createUserWithEmailAndPassword(auth, email, pass);
                window.alertMessage("Usuario admin registrado", 'success');
                // Auto login sucede
            } catch (error) {
                window.alertMessage(error.message, 'error');
            }
        });

        document.getElementById('logout-btn').addEventListener('click', () => {
            if(confirm("¿Cerrar sesión?")) signOut(auth);
        });

        document.getElementById('show-register-btn').addEventListener('click', () => {
             document.getElementById('login-form').classList.add('hidden');
             document.getElementById('register-form').classList.remove('hidden');
             document.getElementById('show-register-btn').classList.add('hidden');
        });
        
        document.getElementById('cancel-reg-btn').addEventListener('click', () => {
             document.getElementById('register-form').classList.add('hidden');
             document.getElementById('login-form').classList.remove('hidden');
             document.getElementById('show-register-btn').classList.remove('hidden');
        });

        // Helpers UI
        window.toggleModal = (id) => {
            const el = document.getElementById(id);
            if (el.classList.contains('hidden')) {
                el.classList.remove('hidden');
            } else {
                el.classList.add('hidden');
            }
        };

        window.toggleTab = (id) => {
            ['products-view', 'inventory-view', 'orders-view'].forEach(v => document.getElementById(v).classList.add('hidden'));
            document.getElementById(id).classList.remove('hidden');
        };
        
        window.toggleCartMobile = () => {
            const sb = document.getElementById('cart-sidebar');
            sb.classList.toggle('translate-x-full');
        };

        window.alertMessage = (msg, type='info') => {
            const c = document.getElementById('toast-container');
            const d = document.createElement('div');
            const color = type === 'success' ? 'bg-green-100 border-green-500 text-green-800' : type === 'error' ? 'bg-red-100 border-red-500 text-red-800' : 'bg-blue-100 border-blue-500 text-blue-800';
            d.className = `p-4 rounded shadow-lg border-l-4 ${color} mb-2 transform transition-all duration-300 translate-x-full`;
            d.innerText = msg;
            c.appendChild(d);
            setTimeout(() => d.classList.remove('translate-x-full'), 50);
            setTimeout(() => { d.classList.add('translate-x-full'); setTimeout(() => d.remove(), 300); }, 3000);
        };

        // Arrancar
        window.addEventListener('load', initApp);
    </script>
</body>
</html>

